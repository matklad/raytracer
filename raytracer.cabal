name:                tracer
version:             0.1.0.0
synopsis:            A ray tracer written in Haskell
license:             MIT
license-file:        LICENSE
author:              Pavel Yakovlev <zhmactep@gmail.com>
                   , Sergei Lebedev <superbobry@gmail.com>
maintainer:          superbobry@gmail.com
category:            Graphics
build-type:          Simple
cabal-version:       >= 1.12

executable ray
  hs-source-dirs:    bin
  default-language:  Haskell2010
  ghc-options:       -Wall -fno-warn-orphans -O2
  main-is:           Ray.hs
  build-depends:     base   == 4.6.*
                   , OpenGL == 2.8.*
                   , GLUT   == 2.4.*
                   , tracer

library
  hs-source-dirs:    src
  default-language:  Haskell2010
  ghc-options:       -Wall -fno-warn-orphans -O2 -funbox-strict-fields
  exposed-modules:   Graphics.Camera
                   , Graphics.Scene
                   , Graphics.Shape
                   , Graphics.Tracer
                   , Text.Obj
                   , Text.Mtl

                   , Data.Vec
                   , Data.Ray

  build-depends:     base              == 4.6.*
                   , bytestring-lexing == 0.4.*
                   , bytestring        == 0.10.*
                   , array             == 0.4.*
                   , attoparsec        == 0.10.4.*
